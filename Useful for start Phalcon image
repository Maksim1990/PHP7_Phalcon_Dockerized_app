docker build -t maksim1990/phalcon -f Dockerfile .


docker run -it \
    -p 22:22 \
    -p 8007:80 \
    -p 3306:3306 \
    -v $PWD:/var/www \
    --network dockernet \
    --ip 172.18.0.2 \
    maksim1990/phalcon


### Install new Phalcon project and give all permissions
phalcon project test
find test -type d -exec chmod 0777 {} + && find test -type f -print0 | xargs -0 chmod og+rwx

#### Run php server from projects folder
php -S 0.0.0.0:80 -t test/public
